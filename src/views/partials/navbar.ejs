<header>
    <nav class="navbar container">
        <figure class="navbar__logo--header">
            <a href="/">
                <img src="/img/branding/logo_light_horizontal.svg" alt="Isotipo de la tienda FunkoShop">
            </a>
        </figure>
        <%if (!view.logged) {%>
            <!-- INICIO MENU -->
            <ul class="navbar__menu--shop">
                <li class="navbar__item with-submenu">
                    <a class="navbar__link with-icon" href="/shop">SHOP<iconify-icon
                            icon="tabler:chevron-down"></iconify-icon></a>
                    <!-- INICIO SUBMENU -->
                    <ul class="submenu">
                        <li class="submenu__item">
                            <a class="submenu__link" href="/shop/funkos">FUNKOS</a>
                        </li>
                        <li class="submenu__item">
                            <a class="submenu__link" href="/shop/remeras">REMERAS</a>
                        </li>
                        <li class="submenu__item">
                            <a class="submenu__link" href="/shop/llaveros">LLAVEROS</a>
                        </li>
                    </ul>
                    <!-- FIN SUBMENU -->
                </li>
                <li class="navbar__item">
                    <a class="navbar__link" href="/auth/login">LOGIN</a>
                </li>

                <li class="navbar__item">
                    <a class="navbar__link" href="/contact">CONTACTO</a>
                </li>

                <li class="navbar__item">
                    <a class="navbar__cart" href="/shop/cart">
                        <img src="/img/icons/cart-icon.svg" alt="Carrito de compras">
                    </a>
                </li>
            </ul>
        <%}else{%>
            <ul class="navbar__menu--shop">
                <li class="navbar__item">
                    <a class="navbar__link" href="/shop/">VER TIENDA</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__link" href="/admin">ADMIN</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__link" href="/auth/logout">SALIR DE <strong><%=view.userName%></strong></a>
                </li>
            </ul>
       <%}%>
    </nav>
</header>