        <%- include ("../partials/head") %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">
        <!-- Estilos propios -->
        <link rel="stylesheet" href="/css/pages/item.css">
        <link rel="stylesheet" href="/css/global/card.css">
        <link rel="stylesheet" href="/css/global/glide.css">
        <link rel="stylesheet" href="/css/global/modal.css">
    </head>
<body>
    <%- include ("../partials/navbar") %>
    <main class="main-container">
        <article class="item container">
            <!-- Imagen del Funko -->
            <picture class="item__cover">
                <img class="item__cover-front" src="/img/<%= item.image_front %>" alt="">
                <img class="item__cover-back" src="/img/<%= item.image_back %>" alt="">
            </picture>

            <!-- Descripcion del Funko -->
            <section class="item__content">
                <span class="item__collection"><%= item.category_name %></span>
                <span class="item__title"><%= item.product_name %></span>
                <span class="item__description"><%= item.product_description %></span>
                <span class="item__price">$ <%= item.price %></span>

                <!-- Contenedor para la cantidad a agregar de items al carrito -->
                <div class="amount">
                    <input id="amount__input" class="amount__input input-hide-arrows" type="number" value="1" min="1">
                    <!-- Botones para incrementar y decrementar cantidad de items -->
                    <div class="amount__btn-container">
                        <button id="btn__add" class="amount__btn" href="" onclick="btn__add(this)">
                            <img src="/img/icons/+.svg" alt="">
                        </button>
                        <button id="btn__substract" class="amount__btn" href="" onclick="btn__substract(this)">
                            <img src="/img/icons/-.svg" alt="" srcset="">
                        </button>
                    </div>
                    <a class="btn-link" href="/shop/cart">Agregar al carrito</a>
                </div>

                <!-- Ver los metodos de pago -->
                <a id="modalOpen" class="link__blue link__blue--payment" href="#">Ver métodos de pago - 3 CUOTAS SIN INTERÉS</a>
                <dialog id="modal" class="modal">
                    <div id="modalClose" class="modal__close">
                        <iconify-icon icon="icon-park-outline:close-one" width="28" height="28"></iconify-icon>
                    </div>
                    <picture>
                        <img src="/img/medios_pagos.jpg" alt="Medios de pago">
                    </picture>
                </dialog>
            </section>
        </article>

        <!-- Seccion de relacionados -->
        <section class="glide glide--carousel container">
            <h2 class="glide__title">PRODUCTOS RELACIONADOS<h2>
            <%- include('../components/glide.ejs')%>
        </section>
    </main>

    <%- include('../partials/footer.ejs',{view}) %>
    <!------ Scripts EXTERNOS ------>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script> <!-- Iconos -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script> <!-- Glide (Carrousel) -->
    <!------ Scripts PROPIOS ------>
    <script src="/scripts/glide-config.js"></script> <!-- Configuracion de libreria Glide -->
    <script src="/scripts/modal.js"></script>
    <script src="/scripts/item-quantity.js"></script>
</body>
</html>
