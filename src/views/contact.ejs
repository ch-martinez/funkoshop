<%- include('partials/head.ejs',{view}) %>
<link rel="stylesheet" href="/css/pages/register.css">
<link rel="stylesheet" href="/css/pages/contact.css">
</head>

<body>
    <%- include('partials/navbar.ejs',{view}) %>
    <!-- MAIN -->
    <main class="main-container">
        <section class="contact__container container">

            <!-- FORMULARIO DE CONTACTO -->
            <form id="form__contact" class="contact__form" action="#" method="post">
                <h1 class="contact__title">Envíanos tu Mensaje</h1>

                <!-- NOMBRE DE USUARIO -->

                <div class="form__box">
                    <label class="contact__label" for="user-name">Nombre</label>
                    <input id="user-name" class="form__input" type="text" name="user-name" placeholder="John"
                        required>
                </div>

                <!-- APELLIDO DE USUARIO -->

                <div class="form__box">
                    <label class="contact__label" for="user-lastname">Apellido</label>
                    <input id="user-lastname" class="form__input" type="text" name="user-lastname" placeholder="Doe"
                        required>
                </div>

                <!-- EMAIL DE USUARIO -->

                <div class="form__box">
                    <label class="contact__label" for="user-email">Email</label>
                    <input id="user-email" class="form__input" type="email" name="user-email"
                        placeholder="jhondoe@correo.com" required>
                </div>

                <!-- TELÉFONO DE USUARIO -->

                <div class="form__box">
                    <label class="contact__label" for="user-phone">Teléfono</label>
                    <input id="user-phone" class="form__input input-hide-arrows" type="number" name="user-phone"
                        placeholder="1123456789" required>
                </div>

                <!-- REGISTRO DE CONSULTA -->

                <div class="create-form__input">
                    <label class="contact__label" for="consult">Consulta</label>
                    <textarea id="item-description" class="form__consult" name="Item-description" rows="10"
                        cols="70" placeholder="Escribe aquí tu consulta."></textarea>
                </div>

                <!-- BOTÓN PARA ENVIAR CONSULTA-->

                <div class="register__input--around">
                    <button class="contact__button" type="submit">Enviar</button>

                    </label>
                </div>
            </form>

            <!-- SEPARADOR -->
            <div class="separator"></div>

            <!-- SECCIÓN LINKS DE CONTACTO -->
            <section class="">
                <ul class="contact__us">

                    <!-- WHATSAPP -->
                    <li class="contact">
                        <a class="contact__link" href="">
                            <picture class="contact__icon">
                                <iconify-icon icon="formkit:whatsapp"></iconify-icon>
                            </picture>
                            <h2>Teléfono</h2>
                            <span>+0098 9893 5467</span>
                            <span>+0096 3434 0678</span>
                        </a>
                    </li>

                    <!-- EMAIL -->
                    <li class="contact">
                        <a class="contact__link" href="">
                            <picture class="contact__icon">
                                <iconify-icon icon="ic:round-mail"></iconify-icon>
                            </picture>
                            <h2>Email</h2>
                            <span>contacto@funkoshop.com.ar</span>
                        </a>
                    </li>

                    <!-- FACEBOOK -->
                    <li class="contact">
                        <a class="contact__link" href="">
                            <picture class="contact__icon">
                                <iconify-icon icon="fe:facebook"></iconify-icon>
                            </picture>
                            <h2>Facebook</h2>
                            <span>/funkoshop_ar</span>
                        </a>
                    </li>

                    <!-- INSTAGRAM -->
                    <li class="contact">
                        <a class="contact__link" href="">
                            <picture class="contact__icon">
                                <iconify-icon icon="ri:instagram-fill"></iconify-icon>
                            </picture>
                            <h2>Instagram</h2>
                            <span>@funkoshop_ar</span>
                        </a>
                    </li>

                </ul>
            </section>

        </section>
    </main>
    <%- include('partials/footer.ejs',{view}) %>
</body>

</html>